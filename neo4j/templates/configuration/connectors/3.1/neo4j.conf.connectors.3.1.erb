
#*****************************************************************
# 3.6. Configure Neo4j connectors
#*****************************************************************
# Default connector settings
# With default configuration Neo4j only accepts local connections.
# To accept non-local-connections, uncomment this line:
dbms.connectors.default_listen_address=<%= @dbms_connectors_default_listen_address %>

# The address at which this server can be reached by its clients. This may be
# the server's IP address or DNS name, or it may be the address of a reverse
# proxy which sits in front of the server. This setting may be overridden for
# individual connectos below.
dbms.connectors.default_advertised_address=<%= @dbms_connectors_default_advertised_address %>

<% if @dbms_connector_bolt_enabled %>
# Bolt connector
dbms.connector.bolt.enabled=<%= @dbms_connector_bolt_enabled %>
dbms.connector.bolt.listen_address=<%= @dbms_connector_bolt_listen_address %>
<% if @dbms_connector_bolt_advertised_address %>
dbms.connector.bolt.advertised_address=<%= @dbms_connector_bolt_advertised_address %>
<% end -%>
<% end -%>

<% if @dbms_connector_http_enabled %>
# HTTP Connector
dbms.connector.http.enabled=<%= @dbms_connector_http_enabled %>
dbms.connector.http.listen_address=<%= @dbms_connector_http_listen_address %>
<% if @dbms_connector_http_advertised_address %>
dbms.connector.http.advertised_address=<%= @dbms_connector_http_advertised_address %>
<% end -%>
<% end -%>

<% if @dbms_connector_https_enabled %>
# HTTPS Connector
dbms.connector.https.enabled=<%= @dbms_connector_https_enabled %>
dbms.connector.https.listen_address=<%= @dbms_connector_https_listen_address %>
<% if @dbms_connector_https_advertised_address %>
dbms.connector.https.advertised_address=<%= @dbms_connector_https_advertised_address %>
<% end -%>
<% end -%>

<% if @dbms_threads_worker_count %>
# Number of Neo4j worker threads.
dbms.threads.worker_count=<%= @dbms_threads_worker_count %>
<% end -%>
